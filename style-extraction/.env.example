# Microsoft Graph API Configuration
# Copy this file to .env and fill in your values from Azure portal

# Azure App Registration Credentials
CLIENT_ID=your-client-id-here
CLIENT_SECRET=your-client-secret-here
TENANT_ID=your-tenant-id-here

# Redirect URI (must match Azure portal configuration)
REDIRECT_URI=http://localhost:3000/auth/callback

# User Information
USER_EMAIL=joe.newman@yourdomain.com

# API Configuration
GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0
AUTHORITY=https://login.microsoftonline.com

# Extraction Settings (optional overrides)
DEFAULT_MONTHS_BACK=6
DEFAULT_MAX_EMAILS=1000
OUTPUT_DIRECTORY=./output
